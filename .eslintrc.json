{
	"extends": "@alhadis",
	"globals": {
		"globalThis": true
	},
	"overrides": [{
		"files": ["lib/*.mjs"],
		"rules": {"require-atomic-updates": 0}
	},{
		"files": ["lib/{dom,misc}.mjs"],
		"rules": {"brace-style": 0}
	},{
		"files": ["lib/functions.mjs"],
		"rules": {"keyword-spacing": 0}
	},{
		"files": ["test/*.js"],
		"rules": {"keyword-spacing": 0},
		"globals": {"expect": true}
	}]
}
