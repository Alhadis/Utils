{
	"extends": "@alhadis",
	"globals": {
		"globalThis": true
	},
	"overrides": [{
		"files": ["lib/*.mjs", "test/*.mjs"],
		"rules": {"require-atomic-updates": 0}
	},{
		"files": ["index.mjs", "test/{binary,shell}.mjs"],
		"parser": "babel-eslint"
	},{
		"files": ["lib/{dom,misc,shell}.mjs"],
		"rules": {"brace-style": 0}
	},{
		"files": ["lib/functions.mjs"],
		"rules": {"keyword-spacing": 0}
	},{
		"files": ["test/*.mjs"],
		"rules": {"keyword-spacing": 0},
		"globals": {"expect": true}
	}]
}
